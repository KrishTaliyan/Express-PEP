{
  "info": {
    "_postman_id": "auth-api-collection",
    "name": "Token Authentication API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Login (Get Token)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 200) {",
              "    var jsonData = pm.response.json();",
              "    pm.environment.set('token', jsonData.token);",
              "    pm.test('Token saved to environment', function() {",
              "        pm.expect(jsonData.token).to.exist;",
              "    });",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"username\": \"krish\", \"password\": \"password123\"}"
        },
        "url": {
          "raw": "http://localhost:5000/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["login"]
        }
      }
    },
    {
      "name": "2. Get Profile (Protected Route)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/profile",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["profile"]
        }
      }
    },
    {
      "name": "3. Get Protected Data",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/data",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["data"]
        }
      }
    },
    {
      "name": "4. Update Profile (Protected Route)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\": \"Krish Updated\", \"email\": \"krish.new@example.com\"}"
        },
        "url": {
          "raw": "http://localhost:5000/profile",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["profile"]
        }
      }
    },
    {
      "name": "5. Test Without Token (Should Fail)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/profile",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["profile"]
        }
      }
    },
    {
      "name": "6. Test With Invalid Token (Should Fail)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer invalid.token.here"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/profile",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["profile"]
        }
      }
    },
    {
      "name": "7. Server Info (Public Endpoint)",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": [""]
        }
      }
    }
  ]
}
